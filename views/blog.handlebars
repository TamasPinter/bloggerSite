<div class="card-post">
    <div class="card-head">
        <div class="col align-self-start col-sm-4">
            <span>by {{user.name}} on {{date_created}}</span>
            <h3>{{title}}</h3>
        </div>
        <div class="col align-self-end">
            <div class="col-md-10 card-desc">
                <p>
                    {{content}}
                </p>
            </div>
        </div>
    </div>
</div>
<h3>Comments</h3>
{{#each comments as |comment|}}
<div class="card-post">
    <div class="card-head">
        <span>by {{user.name}} on {{date_created}}</span>
        <h3><a class="card-title" href="/blog/{{id}}">{{title}}</a></h3>
        <div class="col align-self-end">
            <div class="col-md-10">
                <p>
                    {{comment.content}}
                </p>
            </div>
        </div>
    </div>
</div>
{{/each}}
<br>
{{#if logged_in}}

<form class="comment">
    <h2>Add a comment</h2>
    <div class="body">
        <div>
            <textarea name="comment-content" id="comment-content"></textarea>
        </div>
    </div>
    <button type="submit" class="btn btn-success" id="comment">Add A Comment</button>
</form>

{{else}}
<h4><a href="/login"></a> Log in to leave a comment</h4>
{{/if}}

<script src="./js/comment.js"></script>
